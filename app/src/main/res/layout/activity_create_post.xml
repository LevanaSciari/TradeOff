<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/image_hmee"
    android:padding="16dp">


    <LinearLayout
        android:layout_width="388dp"
        android:layout_height="587dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:fontFamily="@font/damion"
            android:gravity="center_horizontal"
            android:text="Create post"
            android:textAlignment="center"
            android:textColor="#0BD54E"
            android:textSize="24sp"
            android:textStyle="bold|italic" />


        <LinearLayout
            android:layout_width="382dp"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/takeText"
                android:layout_width="175dp"
                android:layout_height="49dp"
                android:layout_marginTop="10dp"
                android:hint="What Do You need?"
                android:textColorHighlight="@color/black"
                android:textColorHint="#D50000"
                android:textSize="20dp" />

            <Spinner
                android:id="@+id/spinner_take"
                android:layout_width="180dp"
                android:layout_height="45dp"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/giveText"
                android:layout_width="wrap_content"
                android:layout_height="49dp"
                android:hint="What Can You Give?"
                android:textColorHint="#D50000"
                android:textSize="20dp" />

            <Spinner
                android:id="@+id/spinner_give"
                android:layout_width="199dp"
                android:layout_height="45dp"
                android:layout_marginTop="12dp" />

        </LinearLayout>


        <Button
            android:id="@+id/createPostbtn"
            android:layout_width="365dp"
            android:layout_height="61dp"
            android:layout_marginStart="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="40dp"
            android:backgroundTint="@android:color/transparent"
            android:hint="Create Post"
            android:textColor="@color/black"
            android:textColorHint="#0BD54E"
            android:textSize="15dp" />


        <ImageButton
            android:id="@+id/cancelBtn"
            android:layout_width="80dp"
            android:layout_height="47dp"
            android:backgroundTint="@android:color/transparent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/ic_baseline_reply_24"
            tools:ignore="OnClick,VectorDrawableCompat" />
    </LinearLayout>


</LinearLayout>