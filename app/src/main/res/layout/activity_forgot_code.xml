<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/question_vert"
    android:visibility="visible"
    tools:context=".Forgot_Password"
    tools:visibility="visible">


    <Button
        android:id="@+id/btn_reset_password"
        android:layout_width="142dp"
        android:layout_height="56dp"
        android:layout_marginStart="268dp"
        android:layout_marginLeft="268dp"
        android:layout_marginBottom="300dp"
        android:autoLink="email"
        android:backgroundTint="@android:color/transparent"
        android:onClick="Reset"
        android:text="Reset Passeword"
        android:textColor="#151515"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/Email"
        android:layout_width="396dp"
        android:layout_height="54dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginBottom="312dp"
        android:hint="Enter your email"
        android:textColorHint="#151515"
        android:textSize="18sp"
        android:textStyle="normal"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.586" />

    <ImageButton
        android:id="@+id/btn_return"
        android:layout_width="82dp"
        android:layout_height="71dp"
        android:layout_marginTop="660dp"
        android:backgroundTint="@android:color/transparent"
        android:onClick="Return"
        android:text="Return"
        android:textColor="#FF6D00"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_reply_24"
        tools:ignore="OnClick,VectorDrawableCompat" />

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:fontFamily="@font/damion"
        android:gravity="center_horizontal"
        android:text="Forgot your password? "
        android:textAlignment="center"
        android:textColor="#0BD54E"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp" />


</androidx.constraintlayout.widget.ConstraintLayout>
